@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Customers</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var c in @Model)
    {
        <tr>
            <td>@Html.ActionLink(@c.Name, "Detail", "Customers", new {Id = @c.Id}, null)</td>
        </tr>
    }
    </tbody>
</table>


