@using Vidly.Models
@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <text>We don't have any customers yet</text>
}
else
{
    <table id="customers" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Customers</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in @Model)
            {
                <tr>
                    <td>@Html.ActionLink(@c.Name, "Edit", "Customers", new { Id = @c.Id }, null)</td>
                    <td>@c.MembershipType.Name</td>
                    <td>@c.MembershipType.DiscountRate %</td>
                    <td>
                        <button data-customer-id="@c.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click",
                function() {
                    var button = $(this);

                    bootbox.confirm("Are you certain you want to delete this customer?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function() {
                                        button.parents("tr").remove();
                                    }
                                });
                            }
                        });
                });
        })
    </script>
}
